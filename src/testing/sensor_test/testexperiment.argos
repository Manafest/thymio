<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="600"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <sensor_test_controller id="thymio"
                               library="build/testing/sensor_test/libsensor_test">
      <actuators>
        <differential_steering implementation="default" />
	<thymio_led            implementation="default" medium="leds"/>
      </actuators>

      <sensors>
        <Thymio_proximity implementation="default" show_rays="true" />
	<Thymio_ground implementation="rot_z_only" show_rays="false"/>
      </sensors>

      <params alpha="0" delta="0.4" velocity="50" />

    </sensor_test_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="1, 1, 1" center="0,0,0.5">

    <floor id="floor" source="image" path="/home/sina/Desktop/Thymio/src/testing/sensor_test/color.png"/> 

    <box id="wall_north" size="1,1,0.5" movable="false">
      <body position="0,1,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="1,1,0.5" movable="false">
      <body position="0,-1,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="1,1,0.5" movable="false">
      <body position="1,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="1,1,0.5" movable="false">
      <body position="-1,0,0" orientation="0,0,0" />
    </box>

    <distribute>
      <position method="constant" values="0,0,0" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="1" max_trials="100">
        <Thymio id="eb0">
          <body position="0,0,0" orientation="0,0,0" />
          <controller config="thymio" />
        </Thymio>
      </entity>
    </distribute>


  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
    <!-- <pointmass3d id="dyn2d" /> -->
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0" position="0,0,0.5" look_at="1,1,-0.21895" up="0.15118,-0.505144,0.849691" lens_focal_length="10" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
