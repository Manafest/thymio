<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="30"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <ground_sensor_test_controller id="thymio"
                               library="build/src/testing/ground_sensor_test/libground_sensor_test">
      <actuators>
        <differential_steering implementation="default" />
	<thymio_led            implementation="default" medium="leds"/>
      </actuators>

      <sensors>
        <thymio_proximity implementation="default" show_rays="true" />
	<thymio_ground implementation="rot_z_only" show_rays="false"/>
      </sensors>

      <params alpha="0" delta="0.4" velocity="5" />

    </ground_sensor_test_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1" center="0,0,0.5">

    <floor id="floor" source="image" path="src/testing/sensor_test/color.png"/> 

    <box id="wall_north" size="2,0.1,0.5" movable="false">
      <body position="0,1,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="2,0.1,0.5" movable="false">
      <body position="0,-1,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,2,0.5" movable="false">
      <body position="1,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,2,0.5" movable="false">
      <body position="-1,0,0" orientation="0,0,0" />
    </box>

 
        <Thymio id="eb0">
          <body position="-0.055,0,0" orientation="0,0,0" />
          <controller config="thymio" />
        </Thymio>

    <box id="box" size="0.02,0.02,0.05" movable="false">
      <body position="0.11,0,0" orientation="0,0,0" />
    </box>


  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
    <!-- <pointmass3d id="dyn2d" /> -->
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0" position="0,0,0.5" look_at="1,1,0" up="0.15118,-0.505144,0.849691" lens_focal_length="10" />
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
